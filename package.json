{
  "name": "never-have-i-ever",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn workspace @nhie/$APP_PACKAGE run start",
    "build": "yarn workspace @nhie/$APP_PACKAGE run build",
    "build:client": "APP_PACKAGE=client yarn build",
    "build:server": "APP_PACKAGE=client yarn build",
    "dev:api": "yarn workspace @nhie/api dev",
    "dev:server": "yarn workspace @nhie/server dev",
    "dev:client": "yarn workspace @nhie/client dev",
    "dev": "concurrently --prefix-colors \"red,green,blue\" \"yarn:dev:server\" \"yarn:dev:client\" \"yarn:dev:api\""
  },
  "engines": {
    "node": "14.15.4"
  },
  "workspaces": [
    "packages/client",
    "packages/server",
    "packages/api"
  ],
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
